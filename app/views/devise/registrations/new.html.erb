<div class="col-lg-4 col-lg-offset-4">
</br></br>
<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <p><%= f.label :Cédula %><br />
    <%= f.text_field :username, autofocus: true, :class => "form-control" %></p>
  </div>
    <div class="field">
    <p><%= f.label :nombre %><br />
    <%= f.text_field :nombre, :class => "form-control" %></p>
  </div>
    <div class="field">
    <p><%= f.label :telefono %><br />
    <%= f.text_field :telefono, :class => "form-control" %></p>
  </div>
  
  <div class="field">
    <%= f.label :Correo %><br />
    <%= f.email_field :email,  :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres como mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,  :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :Confirmación_de_Contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,  :class => "form-control"%>
  </div>

  <div class="actions" align="center">
    <%= f.submit "Registrar" , class:'btn btn-primary'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>