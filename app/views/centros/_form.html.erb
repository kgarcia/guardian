  </div>

  
  <div class="field">
    <%= f.label :parroquia %><br>
    <%= f.select :parroquia_id, options_for_select(@parroquias.collect { |parroquia|
    [parroquia.nombre.titleize, parroquia.id] }), {}, { id: 'parroquias_select' } %>
    
       <%# options_from_collection_for_select(@parroquias, 'id', 'nombre') %>
    <%# f.select 'parroquia_id', options_from_collection_for_select(@parroquias, 'id', 'nombre') %>
