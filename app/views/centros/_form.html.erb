  <div class="field">
    <%= f.label :electores %><br>
    <%= f.number_field :electores , :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :mesas %><br>
    <%= f.number_field :mesas , :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :testigos %><br>
    <%= f.number_field :testigos , :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
