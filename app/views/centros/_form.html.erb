      <h2><%= pluralize(@centro.errors.count, "error") %> prohibited this centro from being saved:</h2>

      <ul>
      <% @centro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :codigo %><br>
    <%= f.text_field :codigo  , :class => "form-control"%>
